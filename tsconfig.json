{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "src/flat.js"],
  "exclude": ["node_modules", "dist"]
}
